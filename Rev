.MODEL SMALL
.DATA
 STR DB "TSEB_EHT_LLA"
 REV_STR DB 06 DUP(0)
 LEN DW 000CH
.CODE
 MOV AX,@DATA
 MOV DS, AX
 MOV ES, AX
 MOV CX, LEN
 LEA SI, STR
 LEA DI, REV_STR
 ADD SI, CX
 DEC SI
 LOC1: MOV AL, [SI]
 MOV [DI], AL
 DEC SI
 INC DI
 DEC CX
 JNZ LOC1
 MOV [DI],"\$"
 LEA DX, REV_STR
 MOV AH, 09H
 INT 21H
 MOV AH, 4CH
 INT 21H
 END
